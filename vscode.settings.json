{
  // 文本编辑器
  "workbench.colorTheme": "GitHub Dark",
  "editor.fontFamily": "Fira Code, Cascadia Code, Iosevka, '微软雅黑', Consolas, 'Courier New', monospace",
  "editor.fontWeight": 450,
  "editor.fontSize": 15,
  "editor.fontLigatures": true,
  "workbench.iconTheme": "vscode-icons",
  "workbench.startupEditor": "none",
  "editor.minimap.autohide": true,
  "http.proxySupport": "on",
  "http.proxyStrictSSL": false,
  "http.proxyAuthorization": null,
  "git.ignoreLegacyWarning": true,
  "git.ignoreMissingGitWarning": true,
  "vsicons.dontShowNewVersionMessage": true,
  "security.workspace.trust.untrustedFiles": "open",
  "window.zoomLevel": 1,
  "editor.accessibilitySupport": "off",
  "julia.NumThreads": "auto",
  // 远程
  "terminal.integrated.defaultProfile.windows": "Command Prompt",
  "terminal.integrated.commandsToSkipShell": [
    "language-julia.interrupt"
  ],
  "remote.SSH.connectTimeout": 10,
  "remote.SSH.maxReconnectionAttempts": null,
  "remote.downloadExtensionsLocally": true,
  "remote.SSH.useLocalServer": false,
  "remote.SSH.localServerDownload": "always",
  "remote.SSH.remotePlatform": {
    "27": "linux",
    "56": "linux",
    "124": "linux",
    "139": "linux",
    "248": "linux",
    "GPU124": "linux",
    "GPU248": "linux"
  },
  // 编程设置
  // tabnine
  "tabnine.experimentalAutoImports": true,
  // julia
  "julia.executablePath": "D:/Program Files/Julia-1.9.0/bin/julia.exe",
  "julia.environmentPath": "C:/Users/cyb/.julia/environments/v1.9",
  "julia.symbolCacheDownload": true,
  "julia.enableTelemetry": false,
  "julia.execution.saveOnEval": true,
  "julia.lint.call": false,
  // python
  "python.formatting.provider": "none",
  "python.venvFolders": [
    "C:\\Users\\cyb\\Envs"
  ],
  "python.linting.flake8Enabled": true,
  //jupyter
  "jupyter.interactiveWindow.textEditor.executeSelection": true,
  "jupyter.allowUnauthorizedRemoteConnection": true,
  "notebook.consolidatedOutputButton": false,
  "notebook.lineNumbers": "on",
  "notebook.editorOptionsCustomizations": null,
  "notebook.displayOrder": [
    "image/png",
    "text/plain"
  ],
  "notebook.diff.enablePreview": false,
  "notebook.formatOnSave.enabled": true,
  //检查和格式化
  "cSpell.enableFiletypes": [
    "!python"
  ],
  "[python]": {
    "editor.formatOnType": true,
    "editor.defaultFormatter": "ms-python.python"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  //markdown
  "markdown-preview-enhanced.previewTheme": "vue.css",
  "markdown-preview-enhanced.revealjsTheme": "serif.css",
  "[markdown]": {
    "editor.defaultFormatter": "yzhang.markdown-all-in-one"
  },
  "markdown-preview-enhanced.enableScriptExecution": true,
  "markdown.marp.enableHtml": true,
  "markdown.marp.exportType": "html",
  "markdown.marp.themes": [
    "https://raw.githubusercontent.com/dracula/marp/master/dracula/dracula.css",
    "https://cunhapaulo.github.io/style/freud.css",
    "https://cunhapaulo.github.io/style/hegel.css",
    "https://cunhapaulo.github.io/style/heidegger.css",
    "https://cunhapaulo.github.io/style/jobs.css",
    "https://cunhapaulo.github.io/style/kant.css",
    "https://cunhapaulo.github.io/style/plato.css",
    "https://cunhapaulo.github.io/style/leibniz.css",
    "https://raw.githubusercontent.com/eyssette/teaching-theme-for-marp/master/themes/teaching.css",
    "https://cunhapaulo.github.io/style/socrates.css"
  ],
  // prettify symbols
  "prettifySymbolsMode.substitutions": [
    {
      "language": "python",
      "substitutions": [
        {
          "ugly": "lambda",
          "pretty": "λ"
        },
      ]
    }
  ],
}
